alias ll='ls -alv'
alias la='ls -A'
alias l='ls -CF'
alias brew='HTTP_PROXY=http://127.0.0.1:7890 HTTPS_PROXY=http://127.0.0.1:7890 brew'
alias nproc='sysctl -n hw.ncpu'
alias pj="pbpaste | jq ."
alias typora="open -a typora"

export ETCDCTL_API=3
export GOPATH="$HOME/.go"
export GOCACHE="$HOME/Library/Caches/go/build"
export GOMODCACHE="$HOME/Library/Caches/go/mod"
export HOMEBREW_NO_AUTO_UPDATE=1
export HOMEBREW_CASK_OPTS="--no-quarantine"
export PYTHON_BUILD_CACHE_PATH="$HOME/Library/Caches/pyenv"

mkdir -p $PYTHON_BUILD_CACHE_PATH
BREW_PREFIX=$(brew --prefix)
BIN_DIRS=(
	$BREW_PREFIX/opt/curl/bin
	$BREW_PREFIX/opt/make/libexec/gnubin
	$BREW_PREFIX/opt/openssl/bin
	$HOME/.cargo/bin
	$GOPATH/bin
)

for BIN_DIR in ${BIN_DIRS[@]}; do
	if [ -d "$BIN_DIR" ]; then
		export PATH="$BIN_DIR:$PATH"
	fi
done

if command -v pyenv 1>/dev/null 2>&1; then
	eval "$(pyenv init -)"
fi

if [ -r ~/.zshrc_local ]; then
	. ~/.zshrc_local
fi

