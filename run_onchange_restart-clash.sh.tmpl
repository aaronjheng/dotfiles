#!/usr/bin/env bash

if command -v clash 1>/dev/null 2>&1; then
{{ if eq .chezmoi.os "linux" -}}
	systemctl --user restart clash
{{ else if eq .chezmoi.os "darwin" -}}
	launchctl stop clash
	launchctl start clash
{{ end -}}
fi

